<apex:page standardcontroller="Merchandise__c">
<apex:form >
	<apex:pageblock title="Welecome to Merchandise">
		<apex:pageBlockButtons >
			<apex:commandButton action="{!save}" value="Save"/>
			<apex:commandButton action="{!cancel}" value="Cancel"/>
		</apex:pageBlockButtons>
		<apex:pageBlockSection Title="Laptop Name and Model">
			<apex:inputField value="{!Merchandise__c.Name}"/>
			<apex:inputField value="{!Merchandise__c.Model__c}"/>
		</apex:pageBlockSection>
		<apex:pageBlockSection Title="Processor Information">
			<apex:inputField value="{!Merchandise__c.Processor__c}"/>
			<apex:inputField value="{!Merchandise__c.RAM_Size__c}"/>
		</apex:pageBlockSection>
		<apex:pageBlockSection Title="Additional Accessories">
			<apex:inputField value="{!Merchandise__c.DVD_Player__c}"/>
			<apex:inputField value="{!Merchandise__c.Hard_Drive__c}"/>
		</apex:pageBlockSection>
	</apex:pageblock>
</apex:form>

</apex:page>